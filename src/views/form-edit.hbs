<form method="POST" action="/admin/{{video._id}}/update?_method=PATCH">
   <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
         type="text"
         class="form-control"
         id="title",
         name="title",
         value="{{video.title}}"
      />
   </div>
   <div class="mb-3">
      <label for="channel" class="form-label">Channel</label>
      <input name="channel" type="text" class="form-control" id="channel" value="{{video.channel}}"/>
   </div>
   <div class="mb-3">
      <label for="thumbnail" class="form-label">Thumbnail</label>
      <input name="thumbnail" type="text" class="form-control" id="thumbnail" value="{{video.thumbnail}}"/>
   </div>
   <div class="mb-3">
      <label for="src" class="form-label">Video source</label>
      <input name="src" type="text" class="form-control" id="src" value="{{video.src}}"/>
   </div>
   <button type="submit" class="btn btn-primary">Update</button>
</form>
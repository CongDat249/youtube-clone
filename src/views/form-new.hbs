<form method="POST" action="/admin/create">
   <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
         type="text"
         class="form-control"
         id="title",
         name="title"
      />
   </div>
   <div class="mb-3">
      <label for="channel" class="form-label">Channel</label>
      <input name="channel" type="text" class="form-control" id="channel" />
   </div>
   <div class="mb-3">
      <label for="thumbnail" class="form-label">Thumbnail</label>
      <input name="thumbnail" type="text" class="form-control" id="thumbnail" />
   </div>
   <div class="mb-3">
      <label for="src" class="form-label">Video source</label>
      <input name="src" type="text" class="form-control" id="src" />
   </div>
   <button type="submit" class="btn btn-primary">Add</button>
</form>